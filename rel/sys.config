% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et
[{kernel, [
    {start_timer, true}, {start_pg2, true}
 ]},
 {sasl, [
    {sasl_error_logger, {file, "log/emqttd_sasl.log"}}
 ]},
 {ssl, [
    %{versions, ['tlsv1.2', 'tlsv1.1']}
 ]},
 {esockd, [
    {logger, {lager, error}}
 ]},
 {lager, [
    {colored, true},
    {async_threshold, 5000},
    {error_logger_redirect, false},
    {crash_log, "log/emqttd_crash.log"},
    {handlers, [
        {lager_console_backend, error},
        %%NOTICE: Level >= error
        %%{lager_emqtt_backend, error},
        {lager_file_backend, [
            {formatter_config, [time, " ", pid, " [",severity,"] ", message, "\n"]},
            {file, "log/emqttd_error.log"},
            {level, error},
            {size, 104857600},
            {date, "$D0"},
            {count, 30}
        ]}
    ]}
 ]},
 {emqttd, [{gen_conf, "etc/emqttd.conf"}]},
 %% Plugins
 {emqttd_dashboard,  [{gen_conf, "etc/plugins/emqttd_dashboard.conf"}]},
 {emqttd_recon,      [{gen_conf, "etc/plugins/emqttd_recon.conf"}]},
 {emqttd_reloader,   [{gen_conf, "etc/plugins/emqttd_reloader.conf"}]},
 {emqttd_stomp,      [{gen_conf, "etc/plugins/emqttd_stomp.conf"}]},
 {emqttd_auth_http,  [{gen_conf, "etc/plugins/emqttd_auth_http.conf"}]},
 {emqttd_auth_mongo, [{gen_conf, "etc/plugins/emqttd_auth_mongo.conf"}]},
 {emqttd_auth_mysql, [{gen_conf, "etc/plugins/emqttd_auth_mysql.conf"}]},
 {emqttd_auth_pgsql, [{gen_conf, "etc/plugins/emqttd_auth_pgsql.conf"}]},
 {emqttd_auth_redis, [{gen_conf, "etc/plugins/emqttd_auth_redis.conf"}]},
 {emqttd_plugin_template, [{gen_conf, "etc/plugins/emqttd_plugin_template.conf"}]}
].
